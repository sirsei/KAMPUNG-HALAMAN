--// ================= THEME COLORS =================
local Theme = {
    Main = Color3.fromRGB(12, 12, 15),
    Secondary = Color3.fromRGB(20, 20, 25),
    Accent = Color3.fromRGB(114, 137, 218),
    Green = Color3.fromRGB(46, 204, 113),
