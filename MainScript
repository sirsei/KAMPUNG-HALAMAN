    btn.MouseButton1Click:Connect(function()
        local i = table.find(RodList, rodName)
        if i then
            table.remove(RodList, i)
            ind.BackgroundColor3 = Theme.Red
        else
            table.insert(RodList, rodName)
            ind.BackgroundColor3 = Theme.Green
        end
    end)
end

