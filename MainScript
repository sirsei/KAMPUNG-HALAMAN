local minimized = false
miniBtn.MouseButton1Click:Connect(function()
    minimized = not minimized

    -- hide konten utama
    container.Visible = not minimized

    -- ðŸ”¥ hide panel auto sell agar tidak melayang saat di-minimize
sellSystemFrame.Visible = not minimized

    local targetSize = minimized
        and UDim2.fromOffset(360, 50)
        or UDim2.fromOffset(360, 480)

    TweenService:Create(
        main,
        TweenInfo.new(0.5, Enum.EasingStyle.Quart, Enum.EasingDirection.Out),
        {Size = targetSize}
    ):Play()

    miniBtn.Text = minimized and "+" or "âˆ’"
end)

--// ================= CORE LOOP =================
task.spawn(function()
    while task.wait(0.05) do
        -- Logic Auto Sell (Cek setiap interval delay)
        if AUTO_SELL_ENABLED and tick() % AUTO_SELL_DELAY < 0.1 then
            for rarity, isSelected in pairs(selectedRarities) do
                if isSelected then
                    ReplicatedStorage:WaitForChild("RequestSell"):FireServer(rarity)
                end
            end
        end
        if not AUTO then continue end
        
        local rod = getNextRod()
        if not rod then continue end
        equipRod(rod)
        task.wait(0.1)
        
        pcall(function()
            local camera = workspace.CurrentCamera
            local defaultFOV = 70 -- Atur sesuai FOV normal kamu
            
            -- ðŸ”¥ FIX CAMERA GLITCH: Paksa kunci FOV agar tidak bisa diubah script lain
            local cameraFix = game:GetService("RunService").RenderStepped:Connect(function()
                camera.FieldOfView = defaultFOV
            end)

            -- ðŸ”¥ UI NUKER: Hapus UI secara instan saat muncul
            local uiNuker = Player.PlayerGui.ChildAdded:Connect(function(child)
                if child.Name:find("MiniGame") then
                    task.wait() 
                    child:Destroy()
                end
            end)

            -- 2. Proses Casting
            rod.Mechanics.Remotes.CastEvent:FireServer(false, 7)
            
            local castPos
            local connection
            connection = ReplicatedStorage.Remotes.BaitLandedEvent.OnClientEvent:Connect(function(pos)
                castPos = pos
                connection:Disconnect()
            end)
            
            local timeout = 0
            while not castPos and timeout < 0.2 do 
                timeout = timeout + task.wait(0.01)
            end
            
            if castPos then
                ReplicatedStorage.Remotes.BaitLandedEvent:FireServer(rod, castPos, "TerrainWater")
            end
			
			local root = Player.Character:FindFirstChild("HumanoidRootPart")
            if root then
                local instantPos = root.Position + (root.CFrame.LookVector * 15) + Vector3.new(0, -5, 0)
                ReplicatedStorage.Remotes.BaitLandedEvent:FireServer(rod, instantPos, "TerrainWater")
            end

            -- 3. Selesaikan Minigame
            task.wait(INPUT_DELAY)
            rod.Mechanics.Remotes.MiniGame:FireServer(true)
            task.wait(0.1)
            rod.Mechanics.Remotes.MiniGame:FireServer(false)

            -- 4. CLEANUP: Matikan pengunci kamera dan UI nuker
            cameraFix:Disconnect()
            uiNuker:Disconnect()
            camera.FieldOfView = defaultFOV

            -- 5. RE-EQUIP (Reset Rod)
            if Player.Character and rod.Parent == Player.Character then
                rod.Parent = Player.Backpack 
                task.wait(0.1) 
                Player.Character.Humanoid:EquipTool(rod) 
            end
        end)
        
        RodIndex = (RodIndex % #RodList) + 1
    end
end)
ShowWelcome()
