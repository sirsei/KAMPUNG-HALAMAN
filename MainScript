delayInput.FocusLost:Connect(function(enterPressed)
    local angkaBaru = tonumber(delayInput.Text) -- Mengubah teks jadi angka
    
    if angkaBaru and angkaBaru >= 0.1 then
        AUTO_SELL_DELAY = angkaBaru -- Simpan angka baru ke script
        print("Jeda Auto Sell diganti ke: " .. angkaBaru)
    else
        -- Jika yang diketik bukan angka atau terlalu kecil, balikkan ke angka awal
        delayInput.Text = tostring(AUTO_SELL_DELAY)
    end
end)

